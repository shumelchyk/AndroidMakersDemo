<!--
	Demo starter project with basic example of an analog watch face, demonstrating:

	- Use of HourHand, MinuteHand, SecondHand
	- Ambient behavior
	- Sweep vs Tick second hand behavior
-->
<WatchFace width="450" height="450">
  <Metadata key="CLOCK_TYPE" value="ANALOG" />
  <Metadata key="PREVIEW_TIME" value="10:08:32" />
  <UserConfigurations>
    <ListConfiguration id="background" displayName="background_label"
        screenReaderText="background_label" defaultValue="tricolor">
      <ListOption id="tricolor" displayName="tricolor_label" screenReaderText="tricolor_label" />
      <ListOption id="eiffel" displayName="eiffel_label" screenReaderText="eiffel_label" />
    </ListConfiguration>
    <ColorConfiguration id="themeColor" displayName="color_label" defaultValue="0">
      <ColorOption id="0" displayName="color_theme_0" colors="#ffbe0b #fb5607 #ff006e" />
      <ColorOption id="1" displayName="color_theme_1" colors="#8ecae6 #219ebc #ffb703" />
      <ColorOption id="2" displayName="color_theme_2" colors="#ff595e #ffca3a #8ac926" />
      <ColorOption id="3" displayName="color_theme_3" colors="#ff0000 #00ff00 #ff00ff" />
      <ColorOption id="4" displayName="color_theme_4" colors="#ff99c8 #fcf6bd #d0f4de" />
      <ColorOption id="5" displayName="color_theme_5" colors="#1be7ff #6eeb83 #e4ff1a" />
    </ColorConfiguration>
  </UserConfigurations>
  <Scene>
    <ListConfiguration id="background">
      <ListOption id="tricolor">
        <!-- Create a Tricolor background -->
        <PartDraw x="0" y="0" width="450" height="450">
          <Variant mode="AMBIENT" target="alpha" value="0" />
          <Rectangle x="0" y="0" width="150" height="450">
            <Fill color="#0055A4" />
          </Rectangle>
          <Rectangle x="150" y="0" width="150" height="450">
            <Fill color="#FFFFFF" />
          </Rectangle>
          <Rectangle x="300" y="0" width="150" height="450">
            <Fill color="#EF4135" />
          </Rectangle>
        </PartDraw>
      </ListOption>
      <ListOption id="eiffel">
        <!-- Eiffel tower background -->
        <PartImage x="0" y="0" width="450" height="450">
          <Image resource="eiffel" />
        </PartImage>
      </ListOption>
    </ListConfiguration>
    <AnalogClock x="0" y="0" width="450" height="450">
      <HourHand resource="hour" x="210" y="75" width="30" height="180" pivotX="0.5"
          pivotY="0.8333" tintColor="[CONFIGURATION.themeColor.0]">
      </HourHand>
      <MinuteHand resource="minute" x="210" y="30" width="30" height="220" pivotX="0.5"
          pivotY="0.8864" tintColor="[CONFIGURATION.themeColor.1]">
      </MinuteHand>
      <SecondHand resource="second" x="215" y="30" width="20" height="240" pivotX="0.5"
          pivotY="0.8125" tintColor="[CONFIGURATION.themeColor.2]">
        <Variant mode="AMBIENT" target="alpha" value="0" />
        <Sweep frequency="15" />
      </SecondHand>
    </AnalogClock>

  </Scene>
</WatchFace>